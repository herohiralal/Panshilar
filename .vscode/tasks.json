{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Test Runner (Debug)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/build.bat"
            },
            "osx": {
                "command": "${workspaceFolder}/build.sh"
            },
            "args": [
                "-tests",
                "-host-only"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "none",
                "isDefault": false
            }
        },
        {
            "label": "Build Bindings Generator (Debug)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/build.bat"
            },
            "osx": {
                "command": "${workspaceFolder}/build.sh"
            },
            "args": [
                "-rebind",
                "-host-only"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "none",
                "isDefault": false
            }
        },
        {
            "label": "Open RadDbg",
            "type": "shell",
            "windows": {
                "command": "raddbg"
            },
            "args": [
                "--project:${workspaceFolder}/panshilar.raddbg_project"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}